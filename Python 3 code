def Grant_user_rights(user):
    read = 0b0001
    write = 0b0010
    delete = 0b0100
    modify = 0b1000
    global permission
    
    user = user.lower()
    user_list = ['guest', 'user', 'moderator', 'admin']
    
    if user == 'guest':
        permission = read
        return permission

    if user == 'user':
        permission = read | write
        return permission

    if user == 'moderator':
        permission = read | write | delete
        return permission

    if user == 'admin':
        permission = read | write | delete | modify
        return permission
        
    else:
        x = (', '.join(str(value) for value in user_list)) # iterates through list and returns all values in it.
        print (f'Users on this system are: {x.title()}') # so the values can be printed

Grant_user_rights ('AdmIn')
print (bin(permission))
